<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dispatcher"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/darklogo"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <LinearLayout
        android:id="@+id/LinearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="100dp"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="100dp"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/prog"
            style="@style/btnStyleBlackpearl"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:onClick="Program"
            android:src="@drawable/program"
            android:stretchMode="none"
            android:text="Program" />

        <ImageButton
            android:id="@+id/env"
            style="@style/btnStyleBlackpearl"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:onClick="Environment"
            android:src="@drawable/env"
            android:text="Environment" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"   
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/cmd"
                style="@style/btnStyleBlackpearl"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:src="@drawable/command"
                android:stretchMode="none"
                android:text="Exit" />

            <ImageButton
                android:id="@+id/state"
                style="@style/btnStyleBlackpearl"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:onClick="Configuration"
                android:src="@drawable/setting"
                android:text="Configuration" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/pal"
            style="@style/btnStyleBlackpearl"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:onClick="Exit"
            android:src="@drawable/exit"
            android:text="Button" />

    </LinearLayout>

</LinearLayout>
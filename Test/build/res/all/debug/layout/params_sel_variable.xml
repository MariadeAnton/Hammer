<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:background="@drawable/m_green"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/er"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:background="#91D100"
        android:gravity="center"
        android:text="Select Variable"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:layout_weight="6" >

        <include
            android:id="@+id/selVar"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            layout="@layout/variable"
            android:background="@drawable/m_green" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:layout_weight="6"
        android:background="@drawable/m_teal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/pathName"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Variables"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <ListView
            android:id="@+id/listSelVar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:background="@drawable/m_blue" >
        </ListView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5" >

        <Button
            android:id="@+id/sust"
            style="@style/btnStyleBlackpearl"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:onClick="onCancelSelVar"
            android:text="Cancel" />

        <Button
            android:id="@+id/plus"
            style="@style/btnStyleBlackpearl"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:onClick="onSetSelectVariableParams"
            android:text="Accept" />

    </LinearLayout>

</LinearLayout><!-- From: file:/C:/Users/Carlos/Dropbox/Hammer/Test/res/layout/params_sel_variable.xml -->
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:stickyviewpager="http://schemas.android.com/apk/res-auto"
    
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/m_white"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <com.test.Widget_IncrementalButtons
                android:id="@+id/widgetQ1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center|fill|fill_vertical"
                android:paddingBottom="5dp"
                android:paddingTop="10dp" >

            </com.test.Widget_IncrementalButtons>

            <com.test.Widget_IncrementalButtons
                android:id="@+id/widgetQ2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingBottom="5dp"
                android:paddingTop="5dp" >

            </com.test.Widget_IncrementalButtons>

            <com.test.Widget_IncrementalButtons
                android:id="@+id/widgetQ3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingBottom="5dp"
                android:paddingTop="5dp" >

            </com.test.Widget_IncrementalButtons>
        </LinearLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="2"
            
             >

            <com.test.Window3D
                android:id="@+id/robotFrame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="5"
             >

            </com.test.Window3D>
            
             <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_roundframe"
             >
                 
             </FrameLayout>
             
        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="fill"
            android:layout_weight="1"
            android:gravity="fill"
            android:orientation="vertical" >

            <com.test.Widget_IncrementalButtons
                android:id="@+id/widgetX"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" 
                android:paddingBottom="5dp"
                android:paddingTop="10dp" >
				
            </com.test.Widget_IncrementalButtons>

            <com.test.Widget_IncrementalButtons
                android:id="@+id/widgetY"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                 android:paddingBottom="5dp"
                android:paddingTop="5dp" >

            </com.test.Widget_IncrementalButtons>

            <com.test.Widget_IncrementalButtons
                android:id="@+id/widgetZ"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" 
                android:paddingBottom="5dp"
                android:paddingTop="5dp" >

            </com.test.Widget_IncrementalButtons>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal"
        android:visibility="visible" >

        <ch.bretscherhochstrasser.android.stickyviewpager.StickyViewPager 
            android:id="@+id/pager"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    stickyviewpager:stickyPositions="0,1"
    stickyviewpager:swipeMarginWidth="20dp"
    tools:context=".ActivityRobot" >

</ch.bretscherhochstrasser.android.stickyviewpager.StickyViewPager>
        
        <Button
            android:id="@+id/rButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_orange_right"
            android:text="Record Point"
            android:textColor="@color/m_white"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
     <item android:state_pressed="false" >
		<shape 	android:padding="16dp"
				android:shape="rectangle" >
				<corners android:radius="20dp"  />
					
				<gradient android:angle="-90"  android:startColor="@color/m_orange" android:endColor="@color/m_orange"  />
		    
		</shape>
	 </item>
	 
     
	<item android:state_pressed="true" >
		<shape 	android:padding="16dp"
				android:shape="rectangle" >
					<corners android:radius="20dp" />
					
					<gradient android:angle="-90"  android:startColor="@color/m_orange_d1" android:endColor="@color/m_orange_d1"  />
		  </shape>
	 </item>  
	
</selector>